<h1>Listing images</h1>

<table>
  <thead>
    <tr>
      <th>Url</th>
      <th>Test</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.url %></td>
        <td><%= image.test_id %></td>
        <td><%= link_to 'Show', [@test, image] %></td>
        <td><%= link_to 'Edit', edit_test_image_url(@test, image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image', new_test_image_path %>
